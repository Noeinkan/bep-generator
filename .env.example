# BEP Generator - Environment Variables Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env files to Git!

# ============================================
# Frontend Configuration (React)
# ============================================

# API Backend URL (default: http://localhost:3001/api)
REACT_APP_API_URL=http://localhost:3001/api

# Auto-login credentials for development (optional)
# Leave empty in production or for security
REACT_APP_DEFAULT_USER_EMAIL=
REACT_APP_DEFAULT_USER_PASSWORD=
REACT_APP_DEFAULT_USER_NAME=

# ============================================
# Backend Configuration (Node.js/Express)
# ============================================

# Server port
PORT=3001

# Node environment (development/production)
NODE_ENV=development

# ============================================
# ML Service Configuration (Python/FastAPI)
# ============================================

# ML Service API URL
ML_SERVICE_URL=http://localhost:8000

# ML Model path
ML_MODEL_PATH=./ml-service/models

# ============================================
# Database Configuration
# ============================================

# SQLite database path (relative to project root)
DB_PATH=./server/db/bep-generator.db

# ============================================
# Security Configuration
# ============================================

# JWT Secret (generate a random string for production)
# Example: openssl rand -base64 32
JWT_SECRET=your-secret-key-here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Optional: External Services
# ============================================

# Add any API keys or external service credentials here
# Example:
# OPENAI_API_KEY=
# GOOGLE_CLOUD_API_KEY=
